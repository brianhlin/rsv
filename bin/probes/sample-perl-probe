#!/usr/bin/env perl

use strict;
use warnings;
use Getopt::Long;

my $VDT_LOCATION;
my $metric;
my $uri;

GetOptions("vdt-location=s" => \$VDT_LOCATION,
           "m=s"            => \$metric,
           "u=s"            => \$uri,
           "help|usage"     => \&usage);

if(!$metric) {
    print "Must supply -m <metric>\n";
    exit 1;
}

if(!$uri) {
    print "Must supply -u <uri>\n";
    exit 1;
}


sub report {
    my ($status, $details) = @_;
    print "JOB RESULTS:\n";
    print "$status\n";
    print "$details\n";
    exit 0;
}
