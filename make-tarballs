#!/bin/sh

VERSION=3.2.0

# Form the two tarballs
tar zcf osg-rsv-probes-$VERSION.tar.gz `find osg-rsv/bin/probes osg-rsv/CHANGELOG.probes ! -name \*~ ! -name .#\* ! -type d | grep -v '\.svn'`
tar zcf  osg-rsv-core-$VERSION.tar.gz `find osg-rsv/bin/consumers osg-rsv/bin/misc osg-rsv/config osg-rsv/lib osg-rsv/logs osg-rsv/sbin osg-rsv/setup osg-rsv/specs osg-rsv/CHANGELOG.core ! -name \*~ ! -name .#\* ! -type d | grep -v '\.svn'`
