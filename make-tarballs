#!/bin/sh

export RSV_VERSION=3.4.1

# Form the tarballs
cp -r rsv-metrics rsv-metrics-$RSV_VERSION
tar zcf rsv-metrics-$RSV_VERSION.tar.gz `find rsv-metrics-$RSV_VERSION ! -name \*~ ! -name .#\* ! -type d | grep -v '\.svn'`
rm -fr rsv-metrics-$RSV_VERSION

cp -r rsv-core rsv-core-$RSV_VERSION
perl -pi -e's/\@\@VERSION\@\@/$ENV{RSV_VERSION}/' rsv-core-$RSV_VERSION/lib/python/rsv/rsv-control.py
tar zcf rsv-core-$RSV_VERSION.tar.gz `find rsv-core-$RSV_VERSION ! -name \*~ ! -name .#\* ! -type d | grep -v '\.svn'`
rm -fr rsv-core-$RSV_VERSION

cp -r rsv-consumers rsv-consumers-$RSV_VERSION
tar zcf rsv-consumers-$RSV_VERSION.tar.gz `find rsv-consumers-$RSV_VERSION ! -name \*~ ! -name .#\* ! -type d | grep -v '\.svn'`
rm -fr rsv-consumers-$RSV_VERSION
